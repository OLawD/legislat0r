<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :parent_id %><br />
    <%= select(:section, :parent_id, Section.all.collect {|s| [ s.title, s.id ] }, {:include_blank => 'None', :index => :parent_id}) %>
  </div>
  <div class="field">
    <%= label_tag(:markup, "Markup") %><br />
    <%= text_area_tag(:markup, @section.get_markup) %>
  </div>
  <div class="field">
    <%= label_tag(:comment, "Edit Comment:") %><br />
    <%= text_field_tag(:comment) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
